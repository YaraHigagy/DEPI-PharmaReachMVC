@model PharmaReachMVC.Models.Medicine

<h4>@Model.Name</h4>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Price:</strong> $@Model.Price</p>
<p><strong>Image:</strong> <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" /></p>
<p><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
<p><strong>Updated At:</strong> @Model.UpdatedAt?.ToString("yyyy-MM-dd")</p>
