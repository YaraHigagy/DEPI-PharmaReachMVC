<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PharmaReachMVC</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- MDB -->
    <link rel="stylesheet" href="~/lib/mdb/css/mdb.min.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PharmaReachMVC.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary mb-3">
            <!-- Container wrapper - container class is deleted -->
            <div class="container-fluid px-4">
                <!-- Navbar brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Medicines" asp-action="Index">PharmaReach</a>

                <!-- Toggle button -->
                <button data-mdb-collapse-init
                        class="navbar-toggler"
                        type="button"
                        data-mdb-target="#navbarButtonsExample"
                        aria-controls="navbarButtonsExample"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarButtonsExample">
                    <!-- Left links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString().Equals("Index", StringComparison.OrdinalIgnoreCase) == true ? "active" : "")" 
                                asp-area="" asp-controller="medicines" asp-action="index">Medicines</a>
                        </li
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString().Equals("PrepaidMedicines", StringComparison.OrdinalIgnoreCase) == true ? "active" : "")" 
                                asp-area="" asp-controller="medicines" asp-action="prepaidMedicines">Pre-paid Medicines</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString().Equals("CharitableMedicines", StringComparison.OrdinalIgnoreCase) == true ? "active" : "")"
                                asp-area="" asp-controller="medicines" asp-action="charitableMedicines">Charitable Medicines</a>
                        </li>
                    </ul>
                    <!-- Left links -->

                    <div class="d-flex align-items-center">
                        @* <a href="@Url.Action("MyCart", "Orders")"> *@
                        @*     <i class="fa-solid fa-cart-plus"></i> *@
                        @* </a> *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            @* <a href="@Url.Action("Logout", "Account")" class="btn btn-light">Logout</a> *@
                            <form method="post" asp-action="Logout" asp-controller="Account" class="d-inline">
                                <button type="submit" class="btn btn-light">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                                Login
                            </a>
                        }
                    </div>
                </div>
                <!-- Collapsible wrapper -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>

    <div class="flex-grow-1 container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted py-3 mt-auto">
        <div class="container text-center">
            &copy; 2025 - PharmaReach - <a asp-area="" asp-controller="Medicines" asp-action="Index">Medicines</a>
        </div>
    </footer>
    <!-- Bootstrap -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- MDB -->
    <script src="~/lib/mdb/js/mdb.umd.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
